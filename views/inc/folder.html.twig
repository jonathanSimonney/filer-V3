<div class="row folder draggableElem" id="{{ folder['id'] }}">
    <div class="col-1">
        <p><i class="fa fa-folder"></i></p>
    </div>
    <div class="col-2">
        <a href="?action=open&fileId={{ folder['id'] }}" class="download clickable">
            <p class="name">{{ folder['name']|slice(start,15) }}</p>
        </a>
    </div>
    <div class="col-2">
        <p class="fileSize"></p>
    </div>
    <div class="col-2">
        <p>{{ folder['date'] }}</p>
    </div>
    <div class="col-5 options">
        <ul>
            <li>
                <a href= "?action=remove&fileId={{ folder['id'] }}"  class="delete clickable" data-toggle="modal" data-target="#myModal">
                    <i class="fa fa-trash" title="delete file"></i>
                </a>
            </li>
            <li>
                <form class="renameForm collapsed" action="?action=rename" method="post">
                    <input type="hidden" name="notForUser" class="notForUser" value="{{ folder['id'] }}">
                    <input class="rename_input " type="text" name="name" placeholder="type the new name" id="name{{ folder['id'] }}">
                    <input id="submit_rename{{ folder['id'] }}" type="submit" class="toHide">
                    <label for="submit_rename{{ folder['id'] }}">
                    </label>
                </form>
                <label for="name{{ folder['id'] }}" class="rename clickable" data-toggle="modal" data-target="#myModal">
                    <i class="fa fa-pencil" title="rename file"></i>
                </label>
            </li>
        </ul>
    </div>
</div>