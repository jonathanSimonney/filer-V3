{% extends 'layout.html.twig' %}

{% block content %}
    <body>
        <div id="register_container">
            <div class="row">
                <div class="col-12 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
                    <b id='message' class="register_error"></b>
                    <form name="signUp" method="POST" action="register.php">
                        <label for="username">Username : </label>
                        <input type="text" name="username" id="username" class="register_input" placeholder="username"><br>

                        <label for="email">Email : </label>
                        <input type="email" name="email" id="email" class="register_input" placeholder="xyz@example.com"><br>

                        <label for="password">Password : </label>
                        <input type="password" name="password" id="password" class="register_input" placeholder="*******">
                        <br>

                        <label for="confirmationOfPassword">Confirm your password : </label>
                        <input type="password" name="confirmationOfPassword" id="confirmationOfPassword" class="register_input" placeholder="confirm your password"><!--BONUS : add button show password -->
                        <br>

                        <label for="indic">Password indication</label>
                        <input type="text" name="indic" id="indic" class="register_input" placeholder="this will be displayed if you don't remember your password"><br>
                        <!--TODO : include capcha if have time-->
                        <button id="register" class="register_input">SEND</button>
                    </form>
                </div>
            </div>
        </div>


        <script type="text/javascript" src="assets/JS/signUpScript.js"></script>
{% endblock %}